
<%- include("templates/header_with_profile.ejs") %>

        <div id="home-background">
            <div id="user-display">
                <h1><%= username %></h1>
                <img src="./images/ranks/<%= rank %>.webp" class="h-auto w-80" alt="Player rank">
            </div>
            <!-- Donut Chart -->
            <div id="donut-chart-container">
                <div class="" id="donut-chart"></div>
            </div>

            <%- include("templates/achievements_container.ejs", {achievements: achievements})%>

            <!-- EXP -->
            <div class="level-container mt-5">
                <div class="flex items-center">
                    <div class="circle flex items-center justify-center mr-3">
                        <%= levelDiet %>
                    </div>
                    <div class="ml-2 flex flex-col">
                        <p class="text-base mb-2">Diet Experience</p>
                        <div class="range-summary" style="--level-progress:<%= expDiet %>; --max-exp:<%= expMax %>"></div>
                    </div>
                </div>
            </div>
            <div class="level-container">
                <div class="flex items-center">
                    <div class="circle flex items-center justify-center mr-3">
                        <%= levelFitness %>
                    </div>
                    <div class="ml-2 flex flex-col">
                        <p class="text-base mb-2">Fitness Experience</p>
                        <div class="range-summary" style="--level-progress:<%= expFitness %>; --max-exp:<%= expMax %>"></div>
                    </div>
                </div>
            </div>
            <div class="level-container">
                <div class="flex items-center">
                    <div class="circle flex items-center justify-center mr-3">
                        <%= levelGame %>
                    </div>
                    <div class="ml-2 flex flex-col">
                        <p class="text-base mb-2">Game Experience</p>
                        <div class="range-summary" style="--level-progress:<%= expGame %>; --max-exp:<%= expMax %>"></div>
                    </div>
                </div>
            </div>
            <!-- Used for the donut chart -->
            <div class="hidden" id="levelGame">
                <%=levelGame%>
            </div>
            <div class="hidden" id="levelFitness">
                <%=levelFitness%>
            </div>
            <div class="hidden" id="levelDiet">
                <%=levelDiet%>
            </div>
        </div>
        <%- include("templates/footer.ejs") %>