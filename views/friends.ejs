<%- include("templates/header_with_profile.ejs") %> 
    <div id="friendPage">
        <div id="friendAddBar">
            <form id="friendAdd" method="post" action="/addFriend">
                <h3 class="text-4xl">
                    Friends
                </h3>
                <input name="friendUsername" type="text" placeholder="Friend's Username" 
                pattern="[A-Za-z0-9]+" title="Only letters and numbers are allowed" required maxlength="20">
                <button type="submit">Add friend</button>
            </form>
        </div>
    <%- include("templates/friends/friend_request", {requests: requests}) %>
    <%- include("templates/friends/friend_card_container", {friends: friends}) %>
</div>

