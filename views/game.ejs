<% if (noRiot && additionalSummoner) { %>
  <%- include("templates/header_with_profile.ejs") %>
  
  <%- include('templates/game/helpfulMessage.ejs', {helpfulMessage: noRiot})  %>
  
  <%- include('templates/game/searchSummonerButton.ejs', {noSummoner: noSummoner}) %>
  
  <%- include('templates/game/summonerGameStats.ejs', {otherSummonerLevel: otherSummonerLevel, otherRank: otherRank, otherWinrate: otherWinrate, otherkd: otherkd}) %>
  
  <!-- Parameter determines default selected dropdown category for modal -->
  <%- include("templates/task_modal.ejs", {category: 'game'}) %>
  
  <%- include("templates/task_cards_container.ejs", {tasks: tasks}) %>
  
  <%- include("templates/footer.ejs") %>
  
  <% } else if (noRiot){ %>
  
  <%- include("templates/header_with_profile.ejs") %>
  
  <%- include('templates/game/helpfulMessage.ejs', {helpfulMessage: noRiot})  %>
  
  <%- include('templates/game/searchSummonerButton.ejs', {noSummoner: noSummoner}) %>
  
  <!-- Parameter determines default selected dropdown category for modal -->
  <%- include("templates/task_modal.ejs", {category: 'game'}) %>
  
  <%- include("templates/task_cards_container.ejs", {tasks: tasks}) %>
  
  <%- include("templates/footer.ejs") %>
  
  <% } else if (additionalSummoner){ %>
  
  <%- include("templates/header_with_profile.ejs") %>
  
  <%- include('templates/game/userGameStats.ejs', {level: level, rank: rank, winrate: winrate, kd: kd}) %>
  
  <%- include('templates/game/searchSummonerButton.ejs', {noSummoner: noSummoner}) %>
  
  <%- include('templates/game/summonerGameStats.ejs', {otherSummonerLevel: otherSummonerLevel, otherRank: otherRank, otherWinrate: otherWinrate, otherkd: otherkd}) %>

  <!-- Parameter determines default selected dropdown category for modal -->
  <%- include("templates/task_modal.ejs", {category: 'game'}) %>

  <%- include("templates/task_cards_container.ejs", {tasks: tasks}) %>

  <%- include("templates/footer.ejs") %>

<% } else { %>
  
  <%- include("templates/header_with_profile.ejs") %>

  <%- include('templates/game/userGameStats.ejs', {level: level, rank: rank, winrate: winrate, kd: kd}) %>

  <%- include('templates/game/searchSummonerButton.ejs', {noSummoner: noSummoner}) %>
  
  <!-- Parameter determines default selected dropdown category for modal -->
  <%- include("templates/task_modal.ejs", {category: 'game'}) %>

  <%- include("templates/task_cards_container.ejs", {tasks: tasks}) %>

  <%- include("templates/footer.ejs") %>

<% } %>