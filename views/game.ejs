<%- include("templates/header_with_profile.ejs") %>
<div id="game-background">
  <% if (noRiot && additionalSummoner) { %>
  
    <%- include('templates/game/helpfulMessage.ejs', {helpfulMessage: noRiot})  %>
  
    <!-- Other summoner game stats -->
    <div class=""><%- include('templates/game/summonerGameStats.ejs', {otherSummonerLevel: otherSummonerLevel, otherRank: otherRank, otherWinrate: otherWinrate}) %></div>
    <%- include('templates/game/searchSummonerButton.ejs', {noSummoner: noSummoner}) %>
  
    <% } else if (noRiot){ %>
  
  
      <%- include('templates/game/helpfulMessage.ejs', {helpfulMessage: noRiot})  %>
  
      <%- include('templates/game/searchSummonerButton.ejs', {noSummoner: noSummoner}) %>
  
  <!-- user has riot account, and other summoner searched -->
    <% } else if (additionalSummoner){ %>
  
    <div id="bothSummoners" class="flex gap-20 flex-wrap justify-center">
      <div class=""><%- include('templates/game/userGameStats.ejs', {level: level, rank: rank, winrate: winrate}) %></div>
      <div class=""><%- include('templates/game/summonerGameStats.ejs', {otherSummonerLevel: otherSummonerLevel, otherRank: otherRank, otherWinrate: otherWinrate}) %></div>
    </div>
  
    <%- include('templates/game/searchSummonerButton.ejs', {noSummoner: noSummoner}) %>
  <!-- Riot account but no other summoner searched -->
  <% } else { %>

  
    <div id="test" class="flex">
  
      <div class=""><%- include('templates/game/userGameStats.ejs', {level: level, rank: rank, winrate: winrate}) %></div>
  
    </div>
  
    <%- include('templates/game/searchSummonerButton.ejs', {noSummoner: noSummoner}) %>
  <% } %>

  <!-- Tasks -->
  <h3 class="text-center text-white text-2xl font-bold rounded-lg m-6 w-3/4">Tasks</h3>
   <div class="flex gap-4 align-center flex-wrap w-3/4 justify-center">
    <a href="/game_completed"
        class="rounded border-solid border-2 border-yellow-500 p-2 text-yellow-500 bg-black hover:text-black hover:bg-yellow-500 text-center duration-1000"
        type="button">
        Completed Tasks
    </a>
    <!-- Modal toggle -->
<button data-modal-target="authentication-modal" data-modal-toggle="authentication-modal" class="text-white rounded border-solid border-2 border-yellow-500 p-2 text-yellow-500 bg-black hover:text-black hover:bg-yellow-500 text-center duration-1000" type="button">
  Add task
</button>
    <%- include("templates/task_modal.ejs", {category: 'game' }) %>
  </div>
  <%- include("templates/task_cards_container.ejs", {tasks: tasks, activities: gamingSuggestions, type:'custom'}) %>

  <h3 class="text-center text-white text-2xl font-bold rounded-lg p-1 w-3/4"> Suggested tasks</h3>
  <%- include("templates/task_cards_container.ejs", {tasks: gamingSuggestions, type: 'gameSuggestions', rank: rank, category: 'game', userTasks: tasks, suggestionValid: true}) %>

  <%- include("templates/easter_footer.ejs") %>
</div>