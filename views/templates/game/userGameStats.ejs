<div id="userStatsCard" class="flex flex-col">
  <h5 class="font-bold pb-5 text-2xl text-center">Your stats</h5>
  <div id="stats" class="flex justify-center min-w-1/3 gap-6 w-full flex-wrap">
    <img id="userRankIcon" class="w-40 h-40"  src="./images/taskCardIcons/<%=rank[0]%>.png" alt="">
  
    <div id="userStats" class="flex flex-col justify-center gap-2">
      <div class="flex flex-col">
        <span class="font-bold whitespace-nowrap">Summoner level:</span> <span class="text-green-500 whitespace-nowrap"><%= level %></span>
      </div>
      <div class="flex flex-col">
        <span class="font-bold whitespace-nowrap">Current rank:</span> <span class="text-green-500 whitespace-nowrap"><%= rank[0] %> <%= rank[1] %></span>
      </div>
      <div class="flex flex-col">
        <span class="font-bold whitespace-nowrap">Win rate:</span> <span class="text-green-500 whitespace-nowrap"><%= winrate %>%</span>
      </div>
    </div>
  </div>
</div>