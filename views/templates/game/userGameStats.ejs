<div id="userStatsCard" class="flex flex-col">
  <h5 class="font-bold pb-5 text-2xl">Your Stats</h5>
  <div id="stats" class="flex justify-between min-w-1/3 gap-6">
    <img id="userRankIcon" class="w-40 h-40"  src="./images/taskCardIcons/<%=rank[0]%>.png" alt="">
  
    <div id="userStats" class="flex flex-col justify-center gap-2">
      <div>
        <span class="font-bold">Summoner Level:</span> <span class="text-green-500"><%= level %></span>
      </div>
      <div>
        <span class="font-bold">Current rank:</span> <span class="text-green-500"><%= rank[0] %> <%= rank[1] %></span>
      </div>
      <div>
        <span class="font-bold">Winrate:</span> <span class="text-green-500"><%= winrate %>%</span>
      </div>
    </div>
  </div>
</div>