<div id="summonerStatsCard" class="flex flex-col">
  <h5 class="font-bold pb-5 text-2xl text-center">Searched summoner stats</h5>
  <div id="otherSummoner" class="flex justify-center min-w-1/3 gap-6 flex-wrap w-full">
    <img id="summonerRankIcon" class="w-40 h-40"  src="./images/taskCardIcons/<%=otherRank[0]%>.png" alt="">
  
    <div id="summonerStats" class="flex flex-col justify-center gap-2">
      <div class="flex flex-col">
        <span class="font-bold whitespace-nowrap">Summoner level:</span><span class="text-green-500 whitespace-nowrap"><%= otherSummonerLevel %></span>
      </div>
      <div class="flex flex-col">
        <span class="font-bold whitespace-nowrap">Current rank:</span><span class="text-green-500 whitespace-nowrap"><%= otherRank[0] %> <%= otherRank[1] %></span>
      </div>
      <div class="flex flex-col">
        <span class="font-bold whitespace-nowrap">Win rate:</span><span class="text-green-500 whitespace-nowrap"><%= otherWinrate %>%</span>
      </div>
    </div>
  </div>
</div>