<div class="card-container flex flex-col gap-1">
    <!-- tasks is passed into the ejs template -->
    <% for(let i = 0; i < tasks.length; i++) {%>
        <%- include("task_card.ejs", {
            taskId: tasks[i]._id, 
            title: tasks[i].title, 
            description: tasks[i].description,
            category: tasks[i].category }) %>
    <% } %>
</div>