            <img src="./images/ranks/<%= rank %>.webp" alt="Player Rank" class="h-auto w-60">
        </div>
        <div class="text-3xl text-center">
            <%= username %>
        </div>
        <div class="text-center text-xl mb-5 text-gray-400">
            <%= gameName %>
        </div>

        <div class="flex flex-col justify-center items-center w-full">
            <div class="experience-container flex items-center">
                <div class="circle flex items-center justify-center mr-3">
                    <%= levelDiet %>
                </div>
                <div class="progress-bar-container ml-2 flex flex-col">
                    <p class="text-base mb-2">Diet Completion</p>
                    <div class="range-profile" style="--level:<%= levelDiet %>; --max-level:<%= levelMax %>;"></div>
                </div>
            </div>
        
        
            <div class="experience-container flex items-center">
                <div class="circle flex items-center justify-center mr-3">
                    <%= levelFitness %>
                </div>
                <div class="progress-bar-container ml-2 flex flex-col">
                    <p class="text-base mb-2">Fitness Completion</p>
                    <div class="range-profile" style="--level:<%= levelFitness %>; --max-level:<%= levelMax %>;"></div>
                </div>
            </div>
        
            <div class="experience-container flex items-center">
                <div class="circle flex items-center justify-center mr-3">
                    <%= levelGame %>
                </div>
                <div class="progress-bar-container ml-2 flex flex-col">
                    <p class="text-base mb-2">Game Completion</p>
                    <div class="range-profile" style="--level:<%= levelGame %>; --max-level:<%= levelMax %>;"></div>
                </div>
            </div>
        </div>
        
            <div class="text-xl flex flex-col gap-4 justify-center items-center">
                <p class="">Email: <%= email %></p>
                <p class="">Allergies: <%= allergies %></p>
                <a href="/logout" class="text-red-500">Log out</a>
            </div>
    </div>
