<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get GUD</title>
    <!-- <script src="https://cdn.tailwindcss.com"></script> -->
    <!-- <script src="..\friend_functions.js"></script> -->
</head>

<body>
    <%- include("templates/header.ejs") %> <!-- change to "templates/header_with_profile.ejs" later -->

        <div id="friendAddBar">
            <form action="friendRequestSearch">
                <input name="friendUsername" type="text" placeholder="Friend's Username">
                <button type="submit">Search</button>
            </form>

        </div>
        <div id="friendRequestDisplay">
            <% if (requests.length===0) { %>
                <div>NO Friends? :c</div>
                <% } else { %>
                    <% requests.forEach(request=> { %>
                        <div class="friend-card flex flex-row">
                            <div class="friend-name-tags">
                                <%= request %>
                            </div>
                            <div class="flex flex-col px-2">
                                <form action="" method="post">
                                    <button onclick="acceptFriend('<%= request %>')">yes</button>
                                    <button onclick="rejectFriend('<%= request %>')">No</button>
                                </form>
                            </div>
                        </div>
                        <% }); %>
                            <% } %>
        </div>

        <script src="friend_functions.js"></script>
</body>
<%- include("templates/footer.ejs") %>

</html>